<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.limopestoques.limop.RelatorioPedidosSolicitados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anual" />

        <Spinner
            android:id="@+id/mensal"
            android:drawablePadding="-0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipo"
            android:background="@drawable/input_style_not"
            android:prompt="@string/tipoT"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp">

        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anual" />

        <Spinner
            android:id="@+id/mensal"
            android:drawablePadding="-0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipo"
            android:background="@drawable/input_style_not"
            android:prompt="@string/tipoT"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp">
        </Spinner>

        <TextView
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anual" />

        <Spinner
            android:id="@+id/anual"
            android:drawablePadding="-0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipo"
            android:background="@drawable/input_style_not"
            android:prompt="@string/tipoT"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp">
        </Spinner>

    </LinearLayout>

</ScrollView>
