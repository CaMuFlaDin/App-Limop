<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.limopestoques.limop.UsuariosGerenciar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="UsuariosGerenciar"
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@drawable/gerenciaruser" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Acessos"
            android:id="@+id/acessos"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:srcCompat="@drawable/acessos" />

    </LinearLayout>

</ScrollView>
