<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.limopestoques.limop.MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_margin="60dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logo" />

            <EditText
                android:hint="@string/email"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_style"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="20dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <EditText
                android:hint="@string/senha"
                android:id="@+id/senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_style"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_senha"
                android:drawableStart="@drawable/ic_senha"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:drawablePadding="20dp"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/textView"
            android:onClick="EsqSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/esquecesenha"
            android:gravity="right"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/button"
            android:onClick="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="#FFF"
            android:background="@drawable/btn_login"
            android:textSize="16sp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/idFabContato"
            android:onClick="Contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:src="@android:drawable/ic_dialog_email" />

    </LinearLayout>

</ScrollView>
