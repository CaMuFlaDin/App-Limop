<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.limopestoques.limop.Principal">

    <LinearLayout
        android:id="@+id/um"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Cadastros"
            android:id="@+id/cadastros"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/cadastro" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        
        <ImageView
            android:onClick="Produtos"
            android:id="@+id/produtos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/produtos" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Servicos"
            android:id="@+id/servicos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/servicos" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Vendas"
            android:id="@+id/vendas"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/vendas" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="SituacaoEstoque"
            android:id="@+id/situacaoestoque"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/situestoque" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="OrdemServico"
            android:id="@+id/ordemservico"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ordemservico" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Relatorios"
            android:id="@+id/relatorios"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/relatorios" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:onClick="Graficos"
            android:id="@+id/graficos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/graficos" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

</ScrollView>
